#!/usr/bin/with-contenv bash
set -e
source $BITNAMI_PREFIX/bitnami-utils.sh

if [ "$MEMCACHED_PASSWORD" ]; then
  echo "Setting password..."
  echo $MEMCACHED_PASSWORD | $BITNAMI_PREFIX/common/sbin/saslpasswd2 -a $BITNAMI_APP_NAME -c user -p
  chown $BITNAMI_APP_USER:$BITNAMI_APP_USER $BITNAMI_PREFIX/common/etc/sasldb2
  print_app_credentials $BITNAMI_APP_NAME user $MEMCACHED_PASSWORD
fi
